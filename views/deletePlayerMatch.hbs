<div class="delete">
    <form id="deletePlayerMatch" method="POST" href="/playerMatches/{{this.playerMatch.playerMatchID}}/delete">
        <legend><h3>Delete PlayerMatch</h3></legend>
        <fieldset class="fields">
            <p>Are you sure you wish to delete Player Match ID: {{this.playerMatch.playerMatchID}}?</p>
            <div class="field">
                <label> Player Name </label> <input type="text" name="playerName" value="{{this.playerMatch.playerName}}" disabled>
            </div>
            <div class="field">
                <label> Match ID </label> <input type="number" name="matchID" value="{{this.playerMatch.matchID}}" disabled>
            </div>
        </fieldset>
        <input class="btn" type="submit" id="DeletePlayerMatch" value="Delete Player Match">
        <a class="btn" href="/playerMatches"><input class="btn" type="button" value="Cancel"></a>
  </form> 
</div><!-- delete -->