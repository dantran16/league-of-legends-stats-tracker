<div class="browse" style="display: block">
    {{!-- Create a table --}}
    <h2>Browse Champions</h2>
    <table border="1" cellpadding="5">

        {{!-- Header section --}}
        <thead>
            <th colspan="2"><a href="/champions/new">New Entry</a></th>
            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            {{#each data.[0]}}
            <th colspan="2">
                {{@key}}
            </th>
            {{/each}}
        </thead>

        {{!-- Body section --}}
        <tbody>
            
            {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
            {{#each data}}
            <tr>
                <td><a href='/champions/{{this.championID}}/edit'>Edit</a></td>
                <td><a href="/champions/{{this.championID}}/delete">Delete</a></td>
                <td colspan="2">{{this.championID}}</td>
                <td colspan="2">{{this.championName}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>