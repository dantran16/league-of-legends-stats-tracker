<div class="delete">
  <form id="deletePlayer" method="POST" href="/players/{{this.player.playerID}}/delete">
      <legend><h3>Delete Player</h3></legend>
          <fieldset class="fields">
            <p>Are you sure you wish to delete Player ID: {{this.player.playerID}}?</p>
            <div class="field">
                <label> Player Name </label> 
                <input type="text" name="playerName" value="{{this.player.playerName}}" disabled>
            </div>
    </fieldset>
    <input class="btn" type="submit" id="DeletePlayer" value="Delete Player">
    <a class="btn" href="/players"><input class="btn" type="button" value="Cancel"></a>
  </form> 
</div><!-- delete -->