<div class="update">
  <form id="updateRole" method="POST" action="/roles/{{this.role.roleID}}/edit">
      <legend><h3>Update Role</h3></legend>
          <fieldset class="fields">
            <div class="field">
                <label> Role ID </label> <input type="text" name="roleID" disabled value="{{this.role.roleID}}">
            </div>
            <div class="field">
                <label> Role Name </label> 
                <input type="text" name="roleName" value="{{this.role.roleName}}">
            </div>
    </fieldset>

    <input class="btn" type="submit" id="updateRole" value="Update Role">
    <a class="btn" href="/roles"><input class="btn" type="button" value="Cancel"></a>
  </form> 
</div><!-- update -->