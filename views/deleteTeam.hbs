<div class="delete">
  <form id="deleteTeam" method="POST" href="/teams/{{this.team.teamID}}/delete">
      <legend><h3>Delete Team</h3></legend>
          <fieldset class="fields">
            <p>Are you sure you wish to delete Team ID: {{this.team.teamID}}?</p>
            <div class="field">
                <label> Team Name </label> 
                <input type="text" name="teamName" value="{{this.team.teamName}}" disabled>
            </div>
    </fieldset>
    <input class="btn" type="submit" id="DeleteTeam" value="Delete Team">
    <a class="btn" href="/teams"><input class="btn" type="button" value="Cancel"></a>
  </form> 
</div><!-- delete -->