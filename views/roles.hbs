<div class="browse" style="display: block">
    {{!-- Create a table --}}
    <h2>Browse Roles</h2>
    <table border="1" cellpadding="5">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
            {{#each data}}
            <tr>
                <td>{{this.roleID}}</td>
                <td>{{this.roleName}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div class="insert" style="display: block">
    <form id="addRole">
        <legend><h3>Add Role</strong></h3>
          <fieldset class="fields">
            <label> Role Name </label> <input type="text" name="roleName">
          </fieldset>
          <input class="btn" type="submit" id="addRole" value="Add Role">
          <input class="btn" type="button" value="Cancel">
	</form> <!--add new role-->
</div><!-- insert -->